<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Dreams Journal{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/bootstrap/css/bootstrap.css') }}" />
            <link rel="stylesheet" href="{{ asset('css/font-awesome/css/font-awesome.min.css') }}" />
            <link rel="stylesheet" href="{{ asset('css/main.css') }}" />
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block topbar %}
            <div class="navbar navbar-default navbar-static-top" role="navigation">
                <div class="navbar-header">
                    <a class="navbar-brand" href="{{ path('homepage') }}"><i class="fa fa-hotel fa-fw"></i> Dreams Journal</a>
                </div>
                <div>
                    <ul class="nav navbar-nav navbar-right">
                        {% if app.user %}
                            <li class="nav-link"><a href="{{ path('user_profile') }}"><i class="fa fa-user fa-fw"></i> Profile</a></li>
                            <li class="nav-link"><a href="{{ path('user_logout') }}"><i class="fa fa-sign-out fa-fw"></i> Logout</a></li>
                        {% else %}
                            <li class="nav-link"><a href="{{ path('user_login') }}"><i class="fa fa-sign-in fa-fw"></i> Log in</a></li>
                            <li class="nav-link"><a href="{{ path('user_register') }}"><i class="fa fa-user-plus fa-fw"></i> Sign up</a></li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        {% endblock %}
        
        <div class="container-fluid">
            <div class="row">
                <div class="col-xs-3">
                    {% block leftcolumn %}
                        {{ render(controller('AppBundle:Front:showFact')) }}
                    {% endblock %}
                </div>
                <div class="col-xs-6">
                    {% block body %}
                    {% endblock %}
                </div>
                <div class="col-xs-3">
                    {% block rightcolumn %}
                        {% if app.user %}
                            {{ render(controller('AppBundle:Front:showRightNav')) }}
                        {% endif %}
                    {% endblock %}
                </div>
            </div>
        </div>
        
        {% block javascripts %}
        {% endblock %}
    </body>
</html>