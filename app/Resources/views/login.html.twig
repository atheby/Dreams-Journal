{% extends 'base.html.twig' %}

{% block body %}
    <div class="panel panel-primary center-block login-block">
        <div class="panel-heading">
            <h3 class="panel-title login-title"><i class="fa fa-sign-in fa-fw"></i> Log in</h3>
        </div>
        <div class="panel-body">
            <form class='form-horizontal' role="form" action="{{ path('login_check') }}" method="post">
                {% if error %}
                    <span class="login-error"><ul><li>Invalid username or password</li></ul></span>
                {% endif %}
                <div class="form-group">
                    <label for="username" class="col-xs-2 control-label">Username</label>
                    <div class="col-xs-10">
                        <input type="text" class="form-control input-field" id="username" name="_username" placeholder="Username" autofocus="autofocus">
                    </div>
                </div>
                <div class="form-group">
                    <label for="password" class="col-xs-2 control-label">Password</label>
                    <div class="col-xs-10">
                        <input type="password" class="form-control input-field" id="password" name="_password" placeholder="Password">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-12 text-center">
                        <hr />
                        <button type="submit" class="btn btn-primary">Log in</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}